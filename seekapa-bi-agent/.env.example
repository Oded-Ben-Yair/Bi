# Seekapa Copilot Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Azure AI Services
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_AI_SERVICES_ENDPOINT=https://your-endpoint.cognitiveservices.azure.com
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com

# Power BI Configuration
POWERBI_CLIENT_ID=your_powerbi_client_id_here
POWERBI_CLIENT_SECRET=your_powerbi_client_secret_here
POWERBI_TENANT_ID=your_tenant_id_here
POWERBI_WORKSPACE_ID=your_workspace_id_here
POWERBI_AXIA_DATASET_ID=your_dataset_id_here
POWERBI_AXIA_DATASET_NAME=ZZDS-Seekapa_Axia

# Application Configuration
APP_NAME=Seekapa Copilot
APP_VERSION=4.0.0
APP_ENV=development
APP_PORT=8000
FRONTEND_PORT=3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security
SECRET_KEY=generate_a_secure_random_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/seekapa_copilot.log