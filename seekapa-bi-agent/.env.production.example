# === Azure Logic Apps Configuration ===
AZURE_LOGIC_APP_URL=https://prod-xx.swedencentral.logic.azure.com/workflows/corppowerbiai
AZURE_LOGIC_APP_KEY=REPLACE_WITH_YOUR_SAS_KEY

# === Azure AI Foundry Configuration ===
AZURE_AI_FOUNDRY_ENDPOINT=https://brn-azai.services.ai.azure.com
AZURE_AI_FOUNDRY_PROJECT=seekapa-bi-agent
AZURE_AGENT_ID=seekapa-copilot-agent

# === Application Configuration ===
APP_NAME=Seekapa Copilot CEO Edition
APP_VERSION=4.0.0
APP_ENV=production
APP_PORT=8000
FRONTEND_PORT=3000

# === Production URL (Update after deployment) ===
APP_BASE_URL=https://seekapa-bi.yourdomain.com

# === Redis Configuration (Caching) ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# === Security Configuration ===
SECRET_KEY=GENERATE_A_SECURE_64_CHAR_RANDOM_KEY_HERE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# === CORS Configuration (Update with your domain) ===
CORS_ORIGINS=https://seekapa-bi.yourdomain.com,https://yourdomain.com

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_FILE=logs/seekapa_production.log

# === Performance Settings ===
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100
WS_MESSAGE_QUEUE_SIZE=1000
QUERY_COMPLEXITY_SIMPLE_THRESHOLD=10
QUERY_COMPLEXITY_MEDIUM_THRESHOLD=20
QUERY_COMPLEXITY_COMPLEX_THRESHOLD=50

