# === CEO Specific Settings ===
CEO_DASHBOARD_REFRESH_INTERVAL=300  # 5 minutes
CEO_PRIORITY_ALERTS=true
CEO_EXECUTIVE_SUMMARY_ENABLED=true
CEO_MOBILE_NOTIFICATIONS=true